generator client {
  provider        = "prisma-client-js"
  output          = "../../node_modules/.prisma/client"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

enum UploadFileEnum {
  PDF
  JPEG
  PNG
} 

enum ChatType {
  SYSTEM 
  HUMAN
  AI
  THINKING
} 

model Upload {
  id           Int      @id @default(autoincrement())
  url          String[]
  format       String
  s3FileKey    String
  fileName     String
  uploads_of   Session? @relation(fields: [session_id], references: [id])
  session_id   Int?
  created_by   User     @relation(fields: [user_id], references: [id])
  user_id      Int 
  created_at   DateTime @default(now())
}

model ChatChunk{ 
  id            Int          @id @default(autoincrement())
  text          String  
  embedding_id  Int
  chunk_of      Chat         @relation(fields: [chat_id], references: [id])
  chat_id       Int
}

model Chat {
  id          Int                          @id @default(autoincrement())
  text        String 
  type        ChatType                     @default(HUMAN)
  session_id  Int
  chunks      ChatChunk[]
  created_at  DateTime                     @default(now())  
}

model Embedding {
  id         Int                          @id @default(autoincrement())
  text       String
  embedding  Unsupported("vector(1536)")?
  created_at DateTime                     @default(now()) 
  upload_id  Int   
}

model User {
  id             Int         @id @default(autoincrement())
  email          String      @unique
  name           String
  username       String      @unique
  profile_img_id Int?
  password       String
  created_at     DateTime    @default(now())
  Session        Session[]
  uploads        Upload[] 
}

enum PostStatusEnum {
  PUBLIC
  PRIVATE
}

model Session {
  id         Int            @id @default(autoincrement()) 
  user_id    Int
  visiblity  PostStatusEnum @default(PRIVATE)
  created_by User           @relation(fields: [user_id], references: [id])
  created_at DateTime       @default(now())
  updated_at DateTime       @default(now())
  Upload     Upload[] 
}
